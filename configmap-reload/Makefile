APP_NAME ?= configmap-reload
GOLANG_VERSION=1.20.4
CONFIGMAP_RELOAD_VERSION=0.8.0
BUSYBOX_VERSION=1.34.1-v1
TAG = v$(CONFIGMAP_RELOAD_VERSION)-$(DOCKER_TAG)
IMG = $(DOCKER_PUSH_REPOSITORY)$(DOCKER_PUSH_DIRECTORY)/$(APP_NAME):$(TAG)
IMG_DOCKER_TAG = $(DOCKER_PUSH_REPOSITORY)$(DOCKER_PUSH_DIRECTORY)/$(APP_NAME):$(DOCKER_TAG)

# Use generic makefile
COMMON_DIR = $(realpath $(shell pwd)/../)/common
include $(COMMON_DIR)/generic_makefile.mk

# override docker-build
docker-build:
	docker build . -t ${IMG} --build-arg CONFIGMAP_RELOAD_VERSION=${CONFIGMAP_RELOAD_VERSION} --build-arg GOLANG_VERSION=${GOLANG_VERSION} --build-arg=BUSYBOX_VERSION=${BUSYBOX_VERSION}
